generator client {
  provider = "prisma-client-js"
 

}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  gender    String
  name      String
  password  String?
  image     String?
  provider  String
  height    Int?
  weight    Int?
  age       Int?
  createdAt DateTime @default(now())
}

model Food {
  id                      Int     @id @default(autoincrement())
  food                    String  @unique
  calories                Float
  serving_size_g          Float
  fat_total_g             Float
  fat_saturated_g         Float
  protein_g               Float
  sodium_mg               Float
  potassium_mg            Float
  cholesterol_mg          Float?
  carbohydrates_total_g   Float?
  fiber_g                 Float?
  sugar_g                 Float?
  photo                   String
  createdAt               DateTime @default(now())
  updatedAt               DateTime @updatedAt
}

model WorkoutPlan {
  id        Int     @id @default(autoincrement())
  day       String
  type      String
  muscles   String[]  // e.g., ["chest", "triceps", "shoulders"]
  createdAt DateTime   @default(now())
}

